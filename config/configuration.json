{
    "service": {
        "name": "simple-file-processor",
        "version": "1.0.0",
        "port": 8080
    },
    "routes": [
        {
            "path": "/health",
            "handler": "HealthCheckHandler",
            "method": "GET"
        },
        {
            "path": "/upload",
            "handler": "FileUploadHandler",
            "method": "POST"
        }
    ],
    "database": {
        "type": "postgres",
        "host": "localhost",
        "port": 5432,
        "username": "user",
        "password": "password",
        "database": "file_processor"
    }
}